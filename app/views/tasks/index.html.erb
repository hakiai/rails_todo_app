<h1>タスク一覧</h1>
<table class="tasks_table">
  <tr>
    <th>タイトル</th>
    <th>説明</th>
    <th>作成日</th>
    <th>更新日</th>
    <th>作成者</th>
  </tr>
  <% @undone_tasks.each do |task|%>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.created_at %></td>
    <td><%= task.updated_at %></td>
    <td><%= task.email %></td>
    <td><%= link_to '詳細', task %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '完了にする', change_done_flag_path(task.id), method: :put %></td>
  </tr>
  <% end %>
</table>
<%= link_to('タスクを追加する', new_task_path)%>
<hr>
<h3>完了したタスク一覧</h3>
<table class="tasks_table">
  <tr>
    <th>タイトル</th>
    <th>説明</th>
    <th>作成日</th>
    <th>更新日</th>
    <th>作成者</th>
  </tr>
  <% @done_tasks.each do |task|%>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.created_at %></td>
    <td><%= task.updated_at %></td>
    <td><%= task.email %></td>
    <td><%= link_to '詳細', task %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '未完了に戻す', change_done_flag_path(task.id), method: :put %></td>
    <td><%= link_to '削除', task, method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
